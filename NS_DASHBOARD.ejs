    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            --secondary-gradient: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
            --purple: #6c5ce7;
            --light-purple: #a29bfe;
            --white: #ffffff;
            --light-bg: #f5f7fa;
            --dark-text: #2d3436;
            --danger: #d63031;
            --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 8px 20px rgba(108, 92, 231, 0.3);
            --btn-gradient: linear-gradient(135deg, #a29bfe, #6c5ce7);
            --btn-hover-gradient: linear-gradient(135deg, #6c5ce7, #a29bfe);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
            background: var(--primary-gradient);
            background-image: url('NS_DASHBOARD_LOGO.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 20%, rgba(108, 92, 231, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 107, 107, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        .sidebar {
            width: 250px;
            background: rgba(108, 92, 231, 0.95);
            padding: 30px 20px;
            display: flex;
            flex-direction: column;
            backdrop-filter: blur(10px);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
            animation: slideIn 0.5s ease;
        }

        .sidebar h2 {
            color: var(--white);
            text-align: center;
            margin-bottom: 50px;
            font-size: 28px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .sidebar h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: var(--secondary-gradient);
            border-radius: 2px;
        }

        .sidebar ul {
            list-style: none;
        }

        .sidebar ul li {
            background: rgba(162, 155, 254, 0.2);
            margin-bottom: 15px;
            padding: 14px;
            text-align: center;
            border-radius: 10px;
            color: var(--white);
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .sidebar ul li a {
            color: var(--white);
            font-weight: 700;
            text-decoration: none;
            display: block;
            width: 100%;
            height: 100%;
        }

        .sidebar ul li.active, .sidebar ul li:hover {
            background: var(--white);
            color: var(--purple);
            box-shadow: var(--hover-shadow);
            transform: none;
        }

        .sidebar ul li.active a, .sidebar ul li:hover a {
            color: var(--purple);
            text-decoration: none;
        }

        .main-content {
            flex: 1;
            padding: 25px;
            display: flex;
            flex-direction: column;
            animation: fadeIn 0.5s ease;
        }

        .topbar {
            background: rgba(255, 255, 255, 0.95);
            padding: 15px 25px;
            border-radius: 12px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-bottom: 25px;
            box-shadow: var(--card-shadow);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .topbar:hover {
            box-shadow: var(--hover-shadow);
            transform: translateY(-2px);
        }

        .topbar span {
            font-weight: 500;
            margin-right: 15px;
            color: var(--purple);
        }

        .topbar button {
            background: var(--btn-gradient);
            color: var(--white);
            border: none;
            padding: 10px 18px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .topbar button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .topbar button:hover {
            background: var(--btn-hover-gradient);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
        }

        .topbar button:hover::before {
            left: 100%;
        }

        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(108, 92, 231, 0.1), transparent);
            transform: translateX(-100%);
            transition: 0.5s;
        }

        .card:hover::before {
            transform: translateX(100%);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: var(--hover-shadow);
        }

        .card h3 {
            margin-bottom: 10px;
            color: var(--purple);
            font-size: 18px;
        }

        .card p {
            font-size: 32px;
            font-weight: bold;
            color: var(--dark-text);
            transition: all 0.3s ease;
        }

        .card:hover p {
            color: var(--purple);
            transform: scale(1.1);
        }

        .event-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }

        .event-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--hover-shadow);
        }

        .event-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .event-content {
            padding: 20px;
        }

        .event-title {
            color: var(--purple);
            font-size: 20px;
            margin-bottom: 10px;
        }

        .event-description {
            color: var(--dark-text);
            font-size: 14px;
            line-height: 1.6;
        }

        .event-date {
            color: var(--purple);
            font-size: 14px;
            margin-top: 10px;
            font-weight: 500;
        }

        .inventory-alert {
            background: rgba(255, 255, 255, 0.95);
            margin-top: 30px;
            padding: 25px;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .inventory-alert:hover {
            box-shadow: var(--hover-shadow);
            transform: translateY(-2px);
        }

        .inventory-alert h2 {
            color: var(--danger);
            font-size: 22px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .inventory-alert h2::before {
            content: "‚ö†Ô∏è";
            margin-right: 10px;
            animation: pulse 2s infinite;
        }

        .inventory-alert ul {
            margin-top: 10px;
            list-style-type: disc;
            padding-left: 20px;
            color: var(--dark-text);
        }

        .inventory-alert ul li {
            margin-bottom: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .inventory-alert ul li:hover {
            color: var(--purple);
            transform: translateX(5px);
        }

        .floating {
            position: absolute;
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            pointer-events: none;
            animation: float 15s infinite linear;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideIn {
            from { transform: translateX(-100%); }
            to { transform: translateX(0); }
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        @keyframes float {
            0% { transform: translate(0, 0) rotate(0deg); }
            50% { transform: translate(100px, 100px) rotate(180deg); }
            100% { transform: translate(0, 0) rotate(360deg); }
        }
    </style>
